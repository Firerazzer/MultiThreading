{
	"type": "shell",
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/../bin/${fileBasenameNoExtension}",
				"-lpthread"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}